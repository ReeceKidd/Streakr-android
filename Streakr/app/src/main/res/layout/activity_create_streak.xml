<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createStreakConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateStreak">

    <EditText
        android:id="@+id/streakNameInput"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/streak_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <Button
        android:id="@+id/soloStreakButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/solo"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="242dp" />

    <Button
        android:id="@+id/inviteFriendsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_friends"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="242dp" />

    <EditText
        android:id="@+id/streakDescriptionInput"
        android:layout_width="wrap_content"
        android:layout_height="143dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textLongMessage"
        android:text="@string/streak_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streakNameInput"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>